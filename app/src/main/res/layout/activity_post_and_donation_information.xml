<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="eslam.emad.bloodbank.ui.activities.PostAndDonationInformationActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_post_and_donation_information_imgv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:src="@drawable/blood_bank" />

            <TextView
                android:id="@+id/activity_post_and_donation_information_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="Title"
                android:textColor="#000"
                android:textSize="@dimen/_20ssp" />

            <TextView
                android:id="@+id/activity_post_and_donation_information_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="Title"
                android:textColor="#000"
                android:textSize="@dimen/_20ssp" />

            <TextView
                android:id="@+id/activity_post_and_donation_information_tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="Title"
                android:textColor="#000"
                android:textSize="@dimen/_20ssp" />

            <TextView
                android:id="@+id/activity_post_and_donation_information_tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="Title"
                android:textColor="#000"
                android:textSize="@dimen/_20ssp" />

            <TextView
                android:id="@+id/activity_post_and_donation_information_tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="Title"
                android:textColor="#000"
                android:textSize="@dimen/_20ssp" />

            <fragment
                android:id="@+id/activity_post_and_donation_information_map"
                android:name="eslam.emad.bloodbank.data.models.CustomMapFragment"
                class="eslam.emad.bloodbank.data.models.CustomMapFragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_350sdp"
                android:layout_margin="@dimen/_16sdp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>