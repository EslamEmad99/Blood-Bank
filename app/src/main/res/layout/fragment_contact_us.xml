<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="eslam.emad.bloodbank.ui.fragments.ContactUsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/fragment_contact_us_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fragment_contact_us_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/_12sdp"
                android:src="@drawable/ic_arrow_back_white" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:minHeight="?actionBarSize"
                android:padding="@dimen/appbar_padding"
                android:text="@string/contact_us"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_contact_us_app_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_contact_us_phone_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:text="@string/phone"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_26sdp"
                android:textStyle="bold" />

            <View
                style="@style/LineStyle"
                android:layout_below="@id/fragment_contact_us_phone_tv" />

            <TextView
                android:id="@+id/fragment_contact_us_number_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_contact_us_phone_tv"
                android:layout_marginTop="@dimen/_8sdp"
                android:drawableEnd="@drawable/ic_phone"
                android:drawablePadding="@dimen/_12sdp"
                android:gravity="end"
                android:paddingEnd="@dimen/_12sdp"
                android:text="01000000000"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/fragment_contact_us_email_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_contact_us_number_tv"
                android:layout_marginTop="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:text="@string/email"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_26sdp"
                android:textStyle="bold" />

            <View
                style="@style/LineStyle"
                android:layout_below="@id/fragment_contact_us_email_tv" />

            <TextView
                android:id="@+id/fragment_contact_us_mail_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_contact_us_email_tv"
                android:layout_marginTop="@dimen/_8sdp"
                android:drawableEnd="@drawable/ic_mail"
                android:drawablePadding="@dimen/_12sdp"
                android:gravity="end"
                android:paddingEnd="@dimen/_12sdp"
                android:text="mail.mail@email.com"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:id="@+id/linear_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@id/fragment_contact_us_mail_tv"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fragment_contact_us_facebook_imgv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:src="@drawable/facebook_icon" />

                <ImageView
                    android:id="@+id/fragment_contact_us_instgram_imgv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:src="@drawable/instgram_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@id/linear_1"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fragment_contact_us_twitter_imgv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:src="@drawable/twitter_icon" />

                <ImageView
                    android:id="@+id/fragment_contact_us_yotube_imgv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:src="@drawable/youtube_icon" />
            </LinearLayout>

            <EditText
                android:id="@+id/fragment_contact_us_message_subject_edit_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@id/linear_2"
                android:layout_margin="@dimen/_16sdp"
                android:background="@drawable/custom_tv"
                android:gravity="start"
                android:hint="عنوان الرسالة"
                android:padding="@dimen/_16sdp"
                android:scrollbars="vertical"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/fragment_contact_us_message_text_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_contact_us_message_subject_edit_text"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:background="@drawable/custom_tv"
                android:gravity="start"
                android:hint="اكتب رسالتك هنا"
                android:inputType="textMultiLine"
                android:minLines="10"
                android:padding="@dimen/_16sdp"
                android:scrollbars="vertical"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/_14sdp" />

            <Button
                android:id="@+id/fragment_profile_enter_btn"
                style="@style/buttonStyle2"
                android:layout_below="@id/fragment_contact_us_message_text_edit_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:text="@string/send" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>